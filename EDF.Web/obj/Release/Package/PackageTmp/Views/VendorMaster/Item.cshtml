
@{
    ViewBag.Title = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white p-3 border" ng-controller="VendorMaster">
    <div class="row pt-2 pb-2">
        <div class="col-md-12">
            <h3><b>Add Vendor Master</b></h3>
            <hr>
        </div>
    </div>
    <br />
    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" ng-model="model.name" validator="[required]" required />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2 col-form-label">IsActive</div>
            <div class="col-sm-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" ng-model="model.is_active" ng-checked="model.is_active" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
                <button type="submit" class="btn btn-primary" ng-click="save()">Submit</button>
            </div>
        </div>
    </form>

</div>
