
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-white p-3">
    <div class="row pt-2 pb-2">
        <div class="col-md-12">
            <h4><b>Vendor Master</b></h4>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class=" col-md-12 text-end"> <a href="/VendorMaster/Item/0" class="btn btn-primary plusbut float-right ml-1">+</a></div>
    </div>
    <br />

    <div ng-app="myApp" ng-controller="VendorMasterList">
        <div style="overflow:auto">
            <table class="table table-hover table-bordered" id="table_id">
                <thead>
                    <tr style="background-color:darkgrey">
                        <th>SrNo</th>
                        <th>Name</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in VendorMastergridData">
                        <td>{{$index+1}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.is_active}}</td>
                        <td><a href="/VendorMaster/Item/{{item.id}}" class="btn btn-primary">Update</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>